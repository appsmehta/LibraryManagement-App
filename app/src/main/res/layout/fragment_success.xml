<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0277bd"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.librarymanagement.siddharth.snaplibrary.SuccessFragment"
    android:layout_marginTop="@dimen/skip_space_for_header">

    <android.support.v7.widget.CardView
        android:id="@+id/success_fragment_cardview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:elevation="4dp"
        android:visibility="visible"
        app:cardUseCompatPadding="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp">

            <ImageView
                android:id="@+id/success_fragment_book_image1"
                android:layout_width="80dp"
                android:layout_height="107dp"
                android:padding="5dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

                <TextView
                    android:id="@+id/success_fragment_book_Title1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Transedence"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/success_fragment_author1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="APJ Abdul Kalam"
                    android:textStyle="italic"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@id/success_fragment_book_Title1"/>

                <TextView
                    android:id="@+id/success_fragment_checkout_date1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Checkout Date :"
                    android:layout_below="@id/success_fragment_author1" />

                <TextView
                    android:id="@+id/success_fragmnet_due_date1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Due Date :"
                    android:layout_below="@id/success_fragment_checkout_date1"/>
            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

