<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.librarymanagement.siddharth.snaplibrary.BlankFragment">
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="20dp"
        android:layout_height="match_parent">

    </Spinner>
    <EditText
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:id="@+id/patron_search_fragment_search_text"
        android:maxLength="200"
        android:hint="Enter value"
        android:textColorHint="#ffffff" />
    <Button
        android:id="@+id/patron_search_fragment_search_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/ic_search_white_18dp"/>

</LinearLayout>
