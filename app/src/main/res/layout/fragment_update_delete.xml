<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">



        <LinearLayout
            android:id="@+id/Author_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/text_book_author"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Author"
                android:textColor="#ffffff"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/update_Fragment_book_author"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textAlignment="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/Author_layout"
            android:padding="5dp">

            <TextView
                android:id="@+id/text_book_title"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textColor="#ffffff"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/Update_Fragment_book_title"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textAlignment="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Publisher_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/Title_layout"
            android:padding="5dp">

            <TextView
                android:id="@+id/text_book_publisher"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Publisher"
                android:textColor="#ffffff"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/update_Fragment_book_publisher"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textAlignment="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Call_Number_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/Publisher_layout"
            android:padding="5dp">

            <TextView
                android:id="@+id/text_book_call_number"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Call Number"
                android:textColor="#ffffff"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/update_Fragment_Call_Number"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Year_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/Call_Number_layout"
            android:padding="5dp">

            <TextView
                android:id="@+id/text_book_year"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Year"
                android:textColor="#ffffff"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/update_Fragment_book_year"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textAlignment="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Location_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/Year_layout"
            android:padding="5dp">

            <TextView
                android:id="@+id/text_book_location"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textColor="#ffffff"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/update_Fragment_book_location"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Copies_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/Location_layout"
            android:padding="5dp">

            <TextView
                android:id="@+id/text_book_Copies"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Number of Copies"
                android:textColor="#ffffff"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/update_Fragment_book_copies"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Keywords_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/Copies_layout"
            android:padding="5dp">

            <TextView
                android:id="@+id/text_book_keywords"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Keywords"
                android:textColor="#ffffff"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/update_Fragment_book_keywords"
                android:layout_width="200dp"
                android:inputType="number"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Status_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/Keywords_layout"
            android:padding="5dp">

            <TextView
                android:id="@+id/text_book_status"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textColor="#ffffff"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/Update_Fragment_book_status"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/Status_layout">

            <Button
                android:id="@+id/update_fragment_update_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UPDATE"
                android:textStyle="bold"
                android:background="#ff8800"
                android:layout_gravity="start"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="70dp"
                android:layout_below="@id/Status_layout"/>

            <Button
                android:id="@+id/update_fragment_delete_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DELETE"
                android:textStyle="bold"
                android:background="#ff8800"
                android:layout_alignParentRight="true"
                android:layout_below="@id/Status_layout" />
        </LinearLayout>

        
    </RelativeLayout>
</ScrollView>