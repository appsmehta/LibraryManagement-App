<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:elevation="4dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp">

            <ImageView
                android:id="@+id/waitlist_book_image"
                android:layout_width="80dp"
                android:layout_height="107dp"
                android:padding="5dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/waitlist_book_Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/waitlist_book_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="italic"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@id/waitlist_book_Title"/>

                <TextView
                    android:id="@+id/waitlist_book_publisher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Publisher"
                    android:layout_below="@id/waitlist_book_Title"
                    android:layout_toRightOf="@id/waitlist_book_author"
                    />
                <!--<TextView-->
                    <!--android:id="@+id/waitlist_order_text"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="Waitlist Order : "-->
                    <!--android:layout_below="@id/waitlist_book_author" />-->

                <!--<TextView-->
                    <!--android:id="@+id/waitlist_order"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text=""-->
                    <!--android:layout_below="@id/waitlist_book_author"-->
                    <!--android:layout_toRightOf="@id/waitlist_order"/>-->
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>