<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:elevation="4dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp">

            <ImageView
                android:id="@+id/booklist_book_image"
                android:layout_width="80dp"
                android:layout_height="107dp"
                android:padding="5dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

                <TextView
                    android:id="@+id/booklist_book_Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Transedence"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/booklist_book_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="APJ Abdul Kalam"
                    android:textStyle="italic"
                    android:layout_marginRight="30dp"
                    android:layout_below="@+id/booklist_book_Title"/>

                <TextView
                    android:id="@+id/booklist_book_publisher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Publisher"
                    android:layout_below="@+id/booklist_book_Title"
                    android:layout_toRightOf="@+id/booklist_book_author"
                    />

                <TextView
                    android:id="@+id/booklist_book_text-status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status : "
                    android:layout_below="@+id/booklist_book_publisher"/>

                <TextView
                    android:id="@+id/booklist_book_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Available"
                    android:layout_below="@+id/booklist_book_publisher"
                    android:layout_toRightOf="@+id/booklist_book_text-status"
                    android:layout_marginRight="30dp"/>

                <TextView
                    android:id="@+id/booklist_book_text-copy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Copies : "
                    android:layout_below="@+id/booklist_book_publisher"
                    android:layout_toRightOf="@id/booklist_book_status"/>

                <TextView
                    android:id="@+id/booklist_book_copies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:layout_below="@+id/booklist_book_publisher"
                    android:layout_toRightOf="@+id/booklist_book_text-copy"/>

            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>