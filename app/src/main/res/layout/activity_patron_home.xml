<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.librarymanagement.siddharth.snaplibrary.PatronHomeActivity">

    <RelativeLayout
        android:id="@+id/drawer_main_content_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:id="@+id/drawer_panel"
        android:gravity="start">

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/material_blue_grey_800"
            android:padding="7dp">

            <ImageView
                android:id="@+id/profile_picture"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_account_circle_white_24dp"
                android:layout_marginTop="15dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/profile_picture">

                <TextView
                    android:id="@+id/drawer_user_email_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/drawer_view_profile_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:layout_marginTop="5dp"
                    android:text="View profile"
                    android:textColor="#ffffff"
                    android:textSize="12sp"/>
            </LinearLayout>

        </RelativeLayout>

        <ListView
            android:id="@+id/navigation_list"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_below="@id/profile_layout"
            android:choiceMode="singleChoice"
            android:background="#ffffff">

        </ListView>

    </RelativeLayout>


</android.support.v4.widget.DrawerLayout>
